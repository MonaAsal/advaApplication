<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingStart="@dimen/_8ssp"
    android:paddingEnd="@dimen/_8ssp">

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/ImageViewStyle"
        android:id="@+id/iv_category_background"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/ic_circle_shadowed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView style="@style/ImageViewStyle"
        android:id="@+id/iv_category_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="@id/iv_category_background"
        app:layout_constraintStart_toStartOf="@id/iv_category_background"
        app:layout_constraintTop_toTopOf="@id/iv_category_background"
        app:layout_constraintBottom_toBottomOf="@id/iv_category_background"
        app:srcCompat="@drawable/ic_finishing" />


    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:textStyle="bold"
        android:text="asdl;kas;ldka aklsjdals aslkjdalskdj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_category_background" />

</androidx.constraintlayout.widget.ConstraintLayout>